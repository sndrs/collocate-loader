    "description": "Webpack loader for collocated modules",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:ci": "npm test -- --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
    },
    "author": "Alex Sanders <a@snd.rs>",
    "license": "ISC",
    "dependencies": {
        "camelcase": "^4.1.0",
