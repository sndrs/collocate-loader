        "loader-utils": "^1.1.0"
    },
    "devDependencies": {
        "babel-core": "^6.25.0",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "^1.5.2",
        "coveralls": "^2.13.1",
        "eslint": "^4.0.0",
        "eslint-config-airbnb-base": "^11.2.0",
        "eslint-config-prettier": "^2.2.0",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-prettier": "^2.1.2",
        "jest": "^20.0.4",
        "memory-fs": "^0.4.1",
        "prettier": "^1.4.4",
        "raw-loader": "^0.5.1",
        "styletron-loader": "^0.5.0",
        "webpack": "^2.6.1"
